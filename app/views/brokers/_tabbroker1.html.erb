<div class="mini-layout">
	<table class="table table-condensed table-striped">	
		<thead>
			<tr>
				<th>
				</th>
				<th>
					<h3>基本信息</h3>
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>所在营业部</td>
				<td colspan="3"><%= @broker.branch.name %></td>
			</tr>
			<tr>
				<td>身份信息</td>
				<td>证件类型</td>
				<td><%= @broker.certificate_type %></td>
				<td><%= @broker.certificate_num %></td>
			</tr>
			<tr>
				<td></td>
				<td>证件地址</td>
				<td colspan="2"><%= @broker.certificate_addr %></td>
			</tr>
			<tr>
				<td>人员类型</td>
				<td><%= @broker.broker_type %></td>
				<td>人员级别</td>
				<td><%= @broker.broker_level %></td>
			</tr>
			<tr>
				<td>岗位状态</td>
				<td><%= @broker.jobstatus %></td>
				<td>工号</td>
				<td><%= @broker.employee_code %></td>
			</tr>
		</tbody>
		<thead>
			<tr>
				<th>
				</th>
				<th colspan="3">
					<h3>执业情况</h3>
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>开户日期</td>
				<td><%= @broker.open_date %></td>
				<td>销户日期</td>
				<td><%= @broker.close_date %></td>
			</tr>
			<tr>
				<td>合同编号</td>
				<td><%= @broker.compact_no %></td>
				<td>银行帐户</td>
				<td><%= @broker.bank_account %></td>
			</tr>
			<tr>
				<td>协议信息</td>
				<td>当前协议日期</td>
				<td colspan="2"><%= @broker.agreement_begin_date %> ~ <%= @broker.agreement_end_date %></td>
			</tr>	
			<tr>	
				<td></td>
				<td>最早协议日期</td>
				<td colspan="2"><%= @broker.earliest_date %></td>
			</tr>
			<tr>	
				<td>执业证获得情况</td>
				<td><%= @broker.broker_qualify_no %></td>
				<td colspan="2">从 <%= @broker.cert_get_date %> 获得 至 <%= @broker.cert_valite_date %> 到期</td>
			</tr>
			<tr>	
				<td>执业资格类型</td>
				<td colspan="3"><%= @broker.job_qualify %></td>
			</tr>
			<tr>	
				<td>人员资格类型</td>
				<td colspan="3"><%= @broker.broker_qualify %></td>
			</tr>
			<tr>	
				<td>考试通过日期</td>
				<td><%= @broker.exam_pass_date %></td>
				<td>培训成绩</td>
				<td></td>
			</tr>
		</tbody>
		<thead>
			<tr>
				<th>
				</th>
				<th colspan="3">
					<h3>教育情况</h3>
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td rowspan="3">学历情况</td>
				<td>最高学历</td>
				<td><%= @broker.broker_degree %></td>
				<td>毕业日期 <%= @broker.graduate_date %></td>
			</tr>
			<tr>
				<td>毕业院校</td>
				<td colspan="2"><%= @broker.graduate_college %></td>
			</tr>
			<tr>
				<td>专业</td>
				<td colspan="2"><%= @broker.major %></td>
			</tr>
		</tbody>
		<thead>
			<tr>
				<th>
				</th>
				<th colspan="3">
					<h3>团队信息</h3>
				</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>所属团队</td>
				<td><%= @broker.team_name %></td>
				<td>团队负责人</td>
				<td><%= @broker.region_manager %></td>
			</tr>
		</tbody>
	</table>
</div>