<script type="text/javascript" charset="utf-8">
$(function() {
	showChartResult4(1011);
});

$('#nav-broker-point button').click( function(e) {
	var selected = $(this).attr('value');
	// console.log(selected);
	showChartResult4(1011);
});

function showChartResult4 (v) {
		var _dept,_url,_width
		_broker = <%= @broker.id %>
		_url = '/brokers/' + _broker + '/brokerindices/' + v + '/broker_index.json'
		// console.log(_url2);
		_width = document.getElementById("tab_page").offsetWidth;
	  return $.get(_url, function(data) {
			var chart, _month
			    _month = [];
					data.map(function(y) {
													_month.push(y.month);
							          })
			new Highcharts.Chart({
				chart: {
					renderTo: "chart_4",
					type: 'line',
					width: _width
				},
				title: {
					text: "个人考核情况"
				},
				xAxis: {
					categories: _month,
					// tickInterval: 3
				},
				yAxis: {
					title: {
						text: "考核分值"
					},
					min: 0,
					labels: {
								formatter: function() {
								   return this.value;
								}
							}
				},
				credits: {
					enabled: false
				},
				series: [
				{
				data: 	
					(function() {
				                var _results;
				                _results = [];
				                data.map(function(y) {
																				_results.push(y.total);
														          })
				                return _results;
				              })(),
					name: "总绩效考核得分",
				}
				]
			})
  });
}
</script>