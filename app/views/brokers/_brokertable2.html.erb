function clearRows2(){  
    var tableLen = document.getElementById('_table2').rows.length;  
    if(tableLen > 0){  
        for(var i=0; i<tableLen; i++){  
            document.getElementById('_table2').deleteRow(tableLen-i-1);  
        }  
    }  
}

