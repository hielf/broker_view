<ul class="breadcrumb">
<% if @title == "选择分公司" %>
  <li>
    <%= link_to "", departments_path, :class => "icon-home" %>
	<span class="divider">•</span>
	<li class="active"><strong><%= @title %></strong></li>
  </li>
<% elsif !@department.nil? && @title == @department.name %>
  <li>
    <%= link_to "", departments_path, :class => "icon-home" %>
	<span class="divider">•</span>
  </li>
  <li>
	<li class="active"><strong><%= @department.name %></strong></li>
	<!-- <span class="divider">|</span> -->
  </li>
<% elsif !@branch.nil? && @title == @branch.name %>
  <li>
    <%= link_to "", departments_path, :class => "icon-home" %>
	<span class="divider">•</span>
  </li>
  <li>
    <strong><%= link_to @father_department.name, @father_department, :class => "active" %></strong>
	<span class="divider">•</span>
  </li>
  <li>
	<li class="active"><strong><%= @branch.name %></strong></li>
	<!-- <span class="divider">|</span> -->
  </li>
<% else %>
  <li>
    <%= link_to "", root_path, :class => "icon-home" %>
	<span class="divider">•</span>
	<li class="active"><strong><%= @title %></strong></li>
  </li>
<% end %>
</ul>