<div class="page-header">
  <h1>用户设置</h1>
</div>
<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
	<%= render 'fields', :f => f %>
	<div class="form-actions">
		<%= f.submit "提交", :class => 'btn btn-primary' %>
		<%= link_to '取消', root_path, :class => 'btn' %>
	</div>
<% end %>