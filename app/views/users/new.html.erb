<div class="page-header">
  <h1>新用户注册</h1>
</div>
<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
	<%= render 'fields', :f => f %>
	<div class="form-actions">
		<%= f.submit "注册", :class => 'btn btn-primary' %>
		<%= link_to '取消', root_path, :class => 'btn' %>
	</div>
  </fieldset>
<% end %>