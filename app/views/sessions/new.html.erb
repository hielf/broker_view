<div class="page-header">
	<h1>登录</h1>
</div>
<%= simple_form_for(:session, :url	=> sessions_path, :html => { :class => 'form-horizontal' }) do |f| %>
	<fieldset>
		<%= render 'fields', :f => f %>
		<div class="form-actions">
		  <%= f.submit "登录", :class => 'btn btn-primary' %>
